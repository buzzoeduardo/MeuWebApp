
@model MeuWebApp.Models.Oficial

@{
    ViewData["Title"] = "Novo";
}

<h1>@ViewData["Title"]</h1>

<h2>Vendedor</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-control">
                <label asp-for="Nome" class="custom-control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="Email" class="custom-control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="DataNasc" class="custom-control-label"></label>
                <input asp-for="DataNasc" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="SalarioBase" class="custom-control-label"></label>
                <input asp-for="SalarioBase" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

