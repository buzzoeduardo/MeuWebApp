
@model MeuWebApp.Models.ViewModels.ModelodeFormOficiais

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<h2>Vendedor</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Oficial.Id"  />
            <div class="form-control">
                <label asp-for="Oficial.Nome" class="custom-control-label"></label>
                <input asp-for="Oficial.Nome" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="Oficial.Email" class="custom-control-label"></label>
                <input asp-for="Oficial.Email" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="Oficial.DataNasc" class="custom-control-label"></label>
                <input asp-for="Oficial.DataNasc" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="Oficial.SalarioBase" class="custom-control-label"></label>
                <input asp-for="Oficial.SalarioBase" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="Oficial.DepartmentId" class="custom-control-label"></label>
                <select asp-for="Oficial.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id",
                       "Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

